{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
